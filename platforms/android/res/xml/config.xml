<?xml version='1.0' encoding='utf-8'?>
<widget id="com.andrewhankewycz.game" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/android/beer_mdpi.png" />
    <icon density="hdpi" src="res/android/beer_hdpi.png" />
    <icon density="xhdpi" src="res/android/beer_xhdpi.png" />
    <name>Tapper</name>
    <description>
        A single-player game where the player must shoot the Enemies without shooting off the screen.
    </description>
    <author email="ahankewycz@gmail.com" href="http://?">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
