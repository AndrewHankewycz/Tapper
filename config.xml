<?xml version='1.0' encoding='utf-8'?>
<widget id="com.andrewhankewycz.game" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tapper</name>
    <description>
        A single-player game where the player must shoot the Enemies without shooting off the screen.
    </description>
    <author email="ahankewycz@gmail.com" href="http://?">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/beer_mdpi.png" density="mdpi" />
        <icon src="res/android/beer_hdpi.png" density="hdpi" />
        <icon src="res/android/beer_xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
